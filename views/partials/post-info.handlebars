<article class="post">
  <div class="title">
    <div class="title-post">
      <h1>{{title}}</h1>
      <span>Post by <b>{{user.username}}</b> on {{format_date created_at}}<span>
    </div>
  </div>
  <div class="meta">
    {{post_content}}
    <br>
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>